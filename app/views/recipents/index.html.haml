.box
  %h2.text-center Boy or Girl?

.div{"data-animate" => "fadeInUp"}
  #blog-homepage.row
    .col-sm-6
      .post
        .owl-item{:style => "width: 228px; margin: 0 auto;"}
          .item{:style => "visibility: visible;"}
            .product
              .flip-container
                .flipper
                  .front
                    = link_to age_groups_path(gender: 'f') do
                      %img.img-responsive{:alt => "", :src => "img/product2.jpg"}/
                  .back
                    = link_to age_groups_path(gender: 'f') do
                      %img.img-responsive{:alt => "", :src => "img/product2_2.jpg"}/
              %a.invisible
                %img.img-responsive{:alt => "", :src => "img/product2.jpg"}/
              .ribbon.sale
                .theribbon GIRL
                .ribbon-background

    .col-sm-6
      .post
        .owl-item{:style => "width: 228px; margin: 0 auto;"}
          .item{:style => "visibility: visible;"}
            .product
              .flip-container
                .flipper
                  .front
                    = link_to age_groups_path(gender: 'm') do
                      %img.img-responsive{:alt => "", :src => "img/step1-boy0.png"}/
                  .back
                    = link_to age_groups_path(gender: 'm') do
                      %img.img-responsive{:alt => "", :src => "img/step1-boy1.jpg"}/
              %a.invisible
                %img.img-responsive{:alt => "", :src => "img/product2.jpg"}/
